# 环境变量示例
# 复制为 .env 后按需填写
OPENAI_API_KEY=

OPENAI_BASE_URL=

# 文本模型名称（用于纯文本生成和增量模式）
TEXT_MODEL_NAME=

# 视觉模型名称（用于多模态图片识别）
VISION_MODEL_NAME=

# 通用兜底模型名称（若未设置 TEXT_MODEL_NAME / VISION_MODEL_NAME）
MODEL_NAME=

# === 多模态开关 ===
# 1=禁用图片理解（默认）；0=启用多模态图片识别
DISABLE_VISION=1

# === 多模态参数（仅在 DISABLE_VISION=0 时生效） ===
MAX_IMAGES_PER_BATCH=10                  # 单批最多处理的图片数量
IMAGE_MAX_SIZE=1024                      # 图片压缩后的最大边长（像素）
IMAGE_QUALITY=85                         # JPEG 压缩质量（0-100）
MAX_SECTION_CHARS=60000                  # 单章节文本字符数上限
